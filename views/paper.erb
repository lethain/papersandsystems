<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
	<div class="card-block">
	  <h2 class="card-title"><a href="<%= paper['link'] %>" target="_blank"><%= paper['name'] %></a></h2>
	  <h6 class="card-subtitle text-muted">
	    Added on <%= paper['ts'].strftime("%B %-d, %Y") %>, and rated <%= '★' * paper['rating'].to_i %> by
	    <%= paper['read_count'] %> reader<% if paper['read_count'] != 1 %>s<% end %>.
	    <% if user %>
	    <% if has_read %>
	    You read this paper on <%= has_read.strftime("%B %-d, %Y") %>.
	    <% else %>
	    Rate this paper:
	    <a href="/papers/<%= paper['slug'] %>/read/?rating=1">★☆☆☆☆</a>,
	    <a href="/papers/<%= paper['slug'] %>/read/?rating=2">★★☆☆☆</a>,
	    <a href="/papers/<%= paper['slug'] %>/read/?rating=3">★★★☆☆</a>,
	    <a href="/papers/<%= paper['slug'] %>/read/?rating=4">★★★★☆</a>,
	    <a href="/papers/<%= paper['slug'] %>/read/?rating=5">★★★★★</a>.
	    <% end %>
	    <% end %>
	    <% if user and user['is_admin'] == 1 %>
	    <a href="/papers/<%= paper['slug'] %>/edit/">Edit this paper.</a>
	    <% end %>	    
	  </h6>
	</div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
	<div class="card-block">
	  <%= rendered %>
	</div>
      </div>
    </div>
  </div>
  <% if systems.size > 0 %>
  <div class="row">
    <div class="col-sm-12">
      <div class="card card-no-margin">
	<h6 class="card-header">Related systems</h6>
	<%= systems_table %>
      </div>
    </div>
  </div>
  <% end %>
</div>
