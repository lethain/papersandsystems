<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th class="hidden-sm-down">Year</th>
      <th class="hidden-sm-down">Topic</th>
      <th>Rating</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% papers.each do |paper| %>
    <tr>
      <th scope="row"><%= paper['pos'] %></th>
      <td><a href="/papers/<% if paper['slug'] %><%= paper['slug'] %><% else %><%= paper['id'] %><% end %>/"><%= paper['name'] %></a></td>
      <td class="hidden-sm-down"><%= paper['year'] %></td>
      <td class="hidden-sm-down"><%= paper['topic'] %></td>
      <td><%= '★' * paper['rating'].to_i %></td>
      <td><% if paper['user_has_read'] %> ✓<% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
