<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th class="hidden-sm-down">Year</th>
      <th class="hidden-sm-down">Topic</th>
      <th>Rating</th>
      <th class="hidden-sm-down">Readers</th>
    </tr>
  </thead>
  <tbody>
    <% papers.each do |paper| %>
    <tr>
      <th scope="row"><%= paper['pos'] %></th>
      <td><a href="/papers/<%= paper['id'] %>/"><%= paper['name'] %></a></td>
      <td class="hidden-sm-down"><%= paper['year'] %></td>
      <td class="hidden-sm-down"><%= paper['topic'] %></td>
      <td><%= 'â˜…' * paper['rating'].to_i %></td>
      <td class="hidden-sm-down"><%= paper['read_count'] %> reader<% if paper['read_count'] != 1 %>s<% end %><% if paper['user_has_read'] %>, including you<% end %>.</td>
    </tr>
    <% end %>
  </tbody>
</table>
