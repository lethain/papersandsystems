
<div class="container">
  <div class="col-sm-2">
    <form id="filters" class="form">
      <div class="form-group">
	<label  for="difficulty">Difficulty</label>
	<select class="form-control" id="difficulty">
	  <option>All</option>
	  <option>Easy</option>
	  <option>Medium</option>
	  <option>Hard</option>
	</select>
      </div>

      <div class="form-group">
	<label  for="topic">Topic</label>
	<select class="form-control" id="topic">
	  <option>All</option>
	  <option>Databases</option>
	  <option>Distributed Systems</option>
	  <option>Operating Systems</option>
	</select>
      </div>
	
      <div class="form-group">
	<label  for="finished">Read</label>
	<select class="form-control" id="finished">
	  <option>All</option>	  
	  <option>Unread</option>
	  <option>Read</option>
	</select>
      </div>
      
    </form>
  </div>

  <div class="col-sm-10">
    <table class="table">
      <thead class="thead-inverse">
	<tr>
	  <th>#</th>
	  <th>Name</th>
	  <th>Status</th>
	</tr>
      </thead>
      <tbody>
	<% papers.each do |paper| %>
	<tr>
	  <th scope="row"><%= paper['id'] %></th>
	  <td><a href="<%= paper['link'] %>"><%= paper['name'] %></a></td>
	  <td>New</td>
	</tr>
	<% end %>
      </tbody>
    </table>
  </div>
</div>
